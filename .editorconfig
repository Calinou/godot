root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true

[*.{cpp,hpp,c,h,mm,js,yml}]
trim_trailing_whitespace = true

[{*.gradle,AndroidManifest.xml}]
indent_style = space
indent_size = 4

[{*.{py,cs},SConstruct,SCsub}]
indent_style = space
indent_size = 4

[*.{csproj,props,targets,nuspec,yml}]
indent_style = space
indent_size = 2
